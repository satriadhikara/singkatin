  "dependencies": {
    "@bogeychan/elysia-logger": "^0.1.10",
    "@elysiajs/cors": "^1.4.0",
    "arktype": "^2.1.29",
    "drizzle-orm": "^0.45.1",
    "elysia": "^1.4.19"
  },
  "devDependencies": {
    "@types/bun": "^1.3.4",
    "bun-types": "latest",
    "drizzle-kit": "^0.31.8"
  }
}

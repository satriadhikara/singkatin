{
  "name": "singkatin",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "bun run --filter '*' dev",
    "dev:api": "bun run --filter @singkatin/api dev",
    "dev:web": "bun run --filter @singkatin/web dev",
    "build": "bun run --filter '*' build",
    "build:api": "bun run --filter @singkatin/api build",
    "build:web": "bun run --filter @singkatin/web build",
    "start": "bun run --filter '*' start",
    "start:api": "bun run --filter @singkatin/api start",
    "start:web": "bun run --filter @singkatin/web start",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/bun": "latest",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.5.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.0"
  }
}
